\newcommand{\Isyntax}[3][S]
{
	\if S#1 %Single: Use for only one syntax
		\indent\textbf{Syntax} \\
		\indent\indent#2 \hfill eg. #3\\\\\\
	\fi
	\if M#1 %Multiple: Use for first entry of multiple syntaxs
		\indent\textbf{Syntax} \\
		\indent\indent#2 \hfill eg. #3
	\fi
	\if E#1 %Extra: Use for middle entry of multiple syntaxs
		\indent\indent#2 eg. #3\\
	\fi
	\if F#1 %Final: Use for last entry of multiple syntaxs
		\indent\indent#2 \hfill eg. #3\\\\
	\fi
	
}
%Argument Summary: 1:Left of assign, 2:Right of assign, 3:NewCFlag(C/0/U), 4:NewVFlag(V/0/U), 5:V2ndOperand(b/5/8/0), 6:VUseCarry(0/c/n), 7:NewNFlag(N/0/U), 8:NewZFlag(Z/0/U)
\newcommand{\Ioperation}[8]
{	\begingroup
	\setlength{\tabcolsep}{2pt}
	\indent\textbf{Operation} \\
	\indent\indent
	\begin{tabular}{rl}
	\if X#1
		\phantom{Rd $\leftarrow$}& #2 \\
	\else
		#1& #2 \\
	\fi
	\if N#7
		N $\leftarrow$& if Result $<$ 0 then 1, else 0 \\
	\else
		\if U#7
			N $\leftarrow$& UNPREDICTABLE \\
		\else
			N $\leftarrow$& N \\
		\fi
	\fi
	\if Z#8
		Z $\leftarrow$& if Result = 0 then 1, else 0\\
	\else
		\if U#8
			Z $\leftarrow$& UNPREDICTABLE \\
		\else
			Z $\leftarrow$& Z \\
		\fi
	\fi
	\if V#4
		\if b#5
			\if 0#6
				V $\leftarrow$& if (+Ra, +Rb, -Result) or \\
				&~~~(-Ra, -Rb, +Result) then 1, else 0 \\
			\fi
			\if c#6
				V $\leftarrow$& if (+Ra, +(Rb+CFlag), -Result) or\\
				&~~~(-Ra, -(Rb+CFlag), +Result) then 1, else 0\\
			\fi
			\if n#6
				V $\leftarrow$& if (+Ra, +(Rb-CFlag), -Result) or\\
				&~~~(-Ra, -(Rb-CFlag), +Result) then 1, else 0\\
			\fi
		\fi
		\if 5#5
			\if 0#6
				V $\leftarrow$& if (+Ra, +\#imm5, -Result) or\\
				&~~~(-Ra, -\#imm5, +Result) then 1, else 0\\
			\fi
			\if c#6
				V $\leftarrow$& if (+Ra, +(\#imm5+CFlag), -Result) or\\
				&~~~(-Ra, -(\#imm5+CFlag), +Result) then 1, else 0\\
			\fi
			\if n#6
				V $\leftarrow$& if (+Ra, +(\#imm5-CFlag), -Result) or\\
				&~~~(-Ra, -(\#imm5-CFlag), +Result) then 1, else 0\\
			\fi
		\fi
		\if 8#5
			\if 0#6
				V $\leftarrow$& if (+Rd, +\#imm8, -Result) or\\
				&~~~(-Rd, -\#imm8, +Result) then 1, else 0\\
			\fi
			\if c#6
				V $\leftarrow$& if (+Rd, +(\#imm8+CFlag), -Result or\\
				&~~~(-Rd, -(\#imm8+CFlag), +Result) then 1, else 0\\
			\fi
			\if n#6
				V $\leftarrow$& if (+Rd, +(\#imm8-CFlag), -Result) or\\
				&~~~(-Rd, -(\#imm8-CFlag), +Result) then 1, else 0\\
			\fi
		\fi
		\if 0#5
			V $\leftarrow$& 0 \\
		\fi
	\else
		\if U#4
			V $\leftarrow$& UNPREDICTABLE \\
		\else
			V $\leftarrow$& V \\
		\fi
	\fi
	\if C#3
		C $\leftarrow$& if (Result $> 2^{16} - 1$) or\\
		&~~~(Result $< -2^{16}$) then 1, else 0\\
	\else
		\if U#3
			C $\leftarrow$& UNPREDICTABLE \\
		\else
			C $\leftarrow$& C \\
		\fi
	\fi
	\end{tabular}
	\\\\	
	\endgroup
}
